<odoo>
    <data noupdate="1">
        <!-- DAILY CHECK CREDIT BALANCE-->
        <!--
            The interval is now configurable per IAP account using the fields:
            - gatewayapi_cron_interval_number
            - gatewayapi_cron_interval_type
            You may need to update the cron programmatically if you want it to reflect the user's settings.
        -->
        <record id="ir_cron_check_tokens" model="ir.cron">
            <field name="name">GatewayAPI: Check credit balance</field>
            <field name="model_id" ref="iap.model_iap_account"/>
            <field name="state">code</field>
            <field name="code">model.check_gatewayapi_credit_balance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
